<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
	</padding>

	<top>
		<VBox prefHeight="100" prefWidth="100" alignment="CENTER"
			style="-fx-background-color: red">
			<children>
				<Label text="top" style="-fx-text-fill: white"></Label>
			</children>
		</VBox>
	</top>
	<left>
		<VBox prefHeight="100" prefWidth="100" alignment="CENTER"
			style="-fx-background-color: orange">
			<children>
				<Label text="left" style="-fx-text-fill: white"></Label>
			</children>
		</VBox>
	</left>
	<center>
		<VBox prefHeight="100" prefWidth="100" alignment="CENTER"
			style="-fx-background-color: yellow">
			<children>
				<Label text="center" style="-fx-text-fill: black"></Label>
			</children>
		</VBox>
	</center>

	<right>
		<VBox prefHeight="100" prefWidth="100" alignment="CENTER"
			style="-fx-background-color: green">
			<children>
				<Label text="right" style="-fx-text-fill: white"></Label>
			</children>
		</VBox>
	</right>

	<bottom>
		<VBox prefHeight="100" prefWidth="100" alignment="CENTER"
			style="-fx-background-color: blue">
			<children>
				<Label text="bottom" style="-fx-text-fill: white"></Label>
			</children>
		</VBox>
	</bottom>
</BorderPane>

